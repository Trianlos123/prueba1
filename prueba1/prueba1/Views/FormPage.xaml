<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prueba1.Views.FormPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="100%"/>
                <ColumnDefinition Width="100%"/>
            </Grid.ColumnDefinitions>-->

            <StackLayout Grid.Row="0" Padding="30,20">
                <Entry x:Name="nombre" Placeholder="Nombre..."/>
                <Entry x:Name="rut" Placeholder="RUT..." Keyboard="Numeric"/>
                <Entry x:Name="email" Placeholder="Email..." Keyboard="Email"/>
                <Entry x:Name="pass1" Placeholder="Contraseña..." IsPassword="True"/>
                <Entry x:Name="pass2" Placeholder="Confirmar Contraseña..." IsPassword="True" />
            </StackLayout>

            <Button Grid.Row="1" Text="Aceptar" Clicked="Button_Clicked"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>